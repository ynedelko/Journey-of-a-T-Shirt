<center>
<h1>Today's visitors have T-Shirts from all over the world.</h1>
<%= pie_chart Visitor.group(:tshirt_made).count %>
<br>
<table class="table table-condensed">
  <thead>
    <tr>
      <th>Name</th>
      <th>T-Shirt Made</th>
      <th>Comment</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <tbody>
      <% @visitors.each do |visitor| %>
        <tr>
          <td><%= visitor.name %></td>
          <td><%= visitor.tshirt_made %></td>
          <td><%= visitor.comment %></td>
          <td><%= link_to 'Edit', edit_visitor_path(visitor) %></td>
          <td><%= link_to 'Destroy', visitor, method: :delete %></td>
        </tr>
      <% end %>
  </tbody>
</table>
</center>
